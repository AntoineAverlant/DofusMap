<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/mangaButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/manganese"
                app:layout_constraintBottom_toTopOf="@id/orButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/cuivreButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/cuivre"
                app:layout_constraintBottom_toTopOf="@id/orButton"
                app:layout_constraintStart_toEndOf="@id/mangaButton"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/argentButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/argent"
                app:layout_constraintBottom_toTopOf="@id/orButton"
                app:layout_constraintStart_toEndOf="@id/cuivreButton"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/ferButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/fer"
                app:layout_constraintBottom_toTopOf="@id/orButton"
                app:layout_constraintStart_toEndOf="@id/argentButton"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/etainButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/etain"
                app:layout_constraintBottom_toTopOf="@id/orButton"
                app:layout_constraintStart_toEndOf="@id/ferButton"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/silicateButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/silicate"
                app:layout_constraintBottom_toTopOf="@id/orButton"
                app:layout_constraintStart_toEndOf="@id/etainButton"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/orButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/or"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mangaButton" />

            <ImageButton
                android:id="@+id/bronzeButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/bronze"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/orButton"
                app:layout_constraintTop_toBottomOf="@id/mangaButton" />

            <ImageButton
                android:id="@+id/kobaButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/kobalte"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/bronzeButton"
                app:layout_constraintTop_toBottomOf="@id/mangaButton" />

            <ImageButton
                android:id="@+id/bauxiteButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/bauxite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/kobaButton"
                app:layout_constraintTop_toBottomOf="@id/mangaButton" />


            <ImageButton
                android:id="@+id/doloButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/dolomite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/bauxiteButton"
                app:layout_constraintTop_toBottomOf="@id/mangaButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>